<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Arm -->
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>EVOR_Hediff_Secondary_NormalArm</defName>
		<label>extradextrous arm</label>
		<defaultLabelColor>(.2,1,.9)</defaultLabelColor>
		<labelNoun>an extradextrous arm</labelNoun>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2</cooldownTime>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>EVOR_Item_NormalArm</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.0</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
		<stages>
			<li>
				<statOffsets>
					<MeleeWeapon_CooldownMultiplier>-.05</MeleeWeapon_CooldownMultiplier>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>1.0</offset>
					</li>
				</capMods>
			</li>	
		</stages>
	</HediffDef>

  <HediffDef ParentName="AddedBodyPartBase">
		<defName>EVOR_Hediff_Secondary_Saber</defName>
		<label>ossified bone saber</label>
		<labelNoun>an ossified bone saber</labelNoun>
		<defaultLabelColor>(.2,1,.9)</defaultLabelColor>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Stab</li>
							<li>Cut</li>
						</capacities>
						<power>27.0</power>
						<cooldownTime>2.2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						<armorPenetration>0.1</armorPenetration>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>EVOR_Item_Saber</spawnThingOnRemoved>
		<addedPartProps>
			<isGoodWeapon>true</isGoodWeapon>
			<solid>true</solid>
			<partEfficiency>1.00</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
		<stages>
			<li>
				<statOffsets>
					<MeleeWeapon_CooldownMultiplier>-.05</MeleeWeapon_CooldownMultiplier>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.3</offset>
					</li>
				</capMods>
			</li>	
		</stages>
	</HediffDef>












	<!--EVOR_Bullet_Maggot-->
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>EVOR_Hediff_Secondary_MaggotBolter</defName>
		<label>voracious maggot bolter</label>
		<defaultLabelColor>(.2,1,.9)</defaultLabelColor>
		<labelNoun>a voracious maggot bolter</labelNoun>
		<spawnThingOnRemoved>EVOR_Item_MaggotBolter</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>     
			<partEfficiency>0.8</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
		<comps>
			<li Class="OrenoPCF.HediffCompProperties_VerbGiverExtended">
				<toggleLabel>Voracious Maggot Bolter</toggleLabel>
				<toggleDescription>Voracious Maggot Bolter.</toggleDescription>
				<toggleBackgroundPath>UI/Widgets/Prosthetic/DesButBGBB</toggleBackgroundPath>
				<toggleIconPath>UI/Widgets/Organs/EVOR_Texture_Minigun</toggleIconPath>
				<toggleIconAngle>-45.0</toggleIconAngle>
				<verbs>
					<li>
						<label>voracious maggot bolter</label>
						<verbClass>Verb_Shoot</verbClass>
						<accuracyTouch>0.36</accuracyTouch>
						<accuracyShort>0.33</accuracyShort>
						<accuracyMedium>0.3</accuracyMedium>
						<accuracyLong>0.27</accuracyLong>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>EVOR_Bullet_Maggot</defaultProjectile>
						<warmupTime>2.30</warmupTime>
						<range>20.0</range>
						<ticksBetweenBurstShots>3</ticksBetweenBurstShots>
						<burstShotCount>12</burstShotCount>
						<soundCast>Shot_ChargeRifle</soundCast>
						<soundCastTail>GunTail_Medium</soundCastTail>
						<muzzleFlashScale>6</muzzleFlashScale>
					</li>
				</verbs>
				<verbsProperties>
					<li>
						<label>voracious maggot bolter</label>
						<description>Voracious Maggot Bolter</description>
						<uiIconPath>UI/Icon/EVOR_Texture_RedBullets</uiIconPath>
					</li>
				</verbsProperties>
			</li>
		</comps>
  </HediffDef>
















  

</Defs>