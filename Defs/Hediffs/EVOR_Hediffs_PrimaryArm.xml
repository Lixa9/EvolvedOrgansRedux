<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Arm -->
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>EVOR_Hediff_Primary_NormalArm</defName>
		<label>extradextrous arm</label>
		<defaultLabelColor>(.2,1,.9)</defaultLabelColor>
		<labelNoun>an extradextrous arm</labelNoun>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>12</power>
						<cooldownTime>2</cooldownTime>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>EVOR_Item_NormalArm</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.0</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
		<stages>
			<li>
				<statOffsets>
					<MeleeWeapon_CooldownMultiplier>-.05</MeleeWeapon_CooldownMultiplier>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
			</li>	
		</stages>
	</HediffDef>

  <HediffDef ParentName="AddedBodyPartBase">
		<defName>EVOR_Hediff_Primary_Saber</defName>
		<label>ossified bone saber</label>
		<labelNoun>an ossified bone saber</labelNoun>
		<defaultLabelColor>(.2,1,.9)</defaultLabelColor>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<capacities>
							<li>Stab</li>
							<li>Cut</li>
						</capacities>
						<power>27.0</power>
						<cooldownTime>2.2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						<armorPenetration>0.1</armorPenetration>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>EVOR_Item_Saber</spawnThingOnRemoved>
